<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/light_gray"> <!-- Ripple color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/chocolate"/> <!-- Default brown color, will be overlaid in other states -->
            <corners android:radius="4dp"/> <!-- Rounded corners -->
            <stroke
                android:width="2dp"
                android:color="@color/colorBlack"/> <!-- White outline -->
        </shape>
    </item>
</ripple>
